#!/bin/bash
set -e
VERSION=$(jq -r .version package.json)
VERSION_TAG=$VERSION.b$CIRCLE_BUILD_NUM

export DOCKER_BUILDKIT=1
export COMPOSE_DOCKER_CLI_BUILD=1

docker login -u $DOCKER_USER -p $DOCKER_PASS

if [ $CIRCLE_BRANCH = master ] || [ $CIRCLE_BRANCH = preview-image ]
then
    docker build --build-arg skip_dev_deps=true -t myonlylonely/redash:preview -t myonlylonely/redash_preview:$VERSION_TAG .
    docker push myonlylonely/redash:preview
    docker push myonlylonely/redash_preview:$VERSION_TAG
else
    docker build --build-arg skip_dev_deps=true -t myonlylonely/redash:$VERSION_TAG .
    docker push myonlylonely/redash:$VERSION_TAG
fi

echo "Built: $VERSION_TAG"
